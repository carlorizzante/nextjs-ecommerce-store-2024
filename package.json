{
  "name": "nextjs-ecommerce-store-2024",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "yarn type-check && yarn lint",
    "update": "yarn upgrade-interactive --latest && yarn validate",
    "update:shadcn-ui": "for file in ./src/components/ui/*.tsx; do npx shadcn-ui@0.8.0 add -y -o $(basename \"$file\" .tsx); echo $(basename \"$file\"); done && yarn validate",
    "undocommit": "git reset --soft HEAD~"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "next": "15.1.4",
    "query-string": "^9.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
